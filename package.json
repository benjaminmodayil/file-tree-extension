{
  "name": "filetree-generator",
  "displayName": "File Tree to Text",
  "description": "Generate text representation of folder structure",
  "version": "1.1.0",
  "publisher": "modayilme",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjaminmodayil/file-tree-extension/issues"
  },
  "license": "MIT",
  "keywords": [
    "file tree",
    "directory tree",
    "folder structure"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "filetree-generator.generateTree",
        "title": "Generate File Tree"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "filetree-generator.generateTree",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "File Tree Generator",
      "properties": {
        "filetreeGenerator.ignoredPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional patterns to ignore when generating the file tree. Default patterns (.git, node_modules, .DS_Store) will always be included, but the initial folder name will be displayed in the filetree."
        },
        "filetreeGenerator.maxDepth": {
          "type": "number",
          "default": 10,
          "description": "Maximum depth to traverse when generating the file tree."
        },
        "filetreeGenerator.includeMarkdown": {
          "type": "boolean",
          "default": false,
          "description": "Whether to wrap the file tree in a markdown code block with a description of ignored patterns."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "publish": "vsce publish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^14.x.x",
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "eslint": "^8.x.x",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "@vscode/test-electron": "^2.3.8",
    "typescript": "^4.x.x"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/benjaminmodayil/file-tree-extension/issues"
  },
  "homepage": "https://github.com/benjaminmodayil/file-tree-extension#readme"
}
