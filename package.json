{
  "name": "filetree-generator",
  "displayName": "File Tree Generator",
  "description": "Generate text representation of folder structure",
  "version": "0.0.1",
  "publisher": "modayilme",
  "repository": {
    "type": "git",
    "url": "https://github.com/YourUsername/filetree-generator"
  },
  "license": "MIT",
  "keywords": [
    "file tree",
    "directory tree",
    "folder structure"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:filetree-generator.generateTree"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "filetree-generator.generateTree",
        "title": "Generate File Tree"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "filetree-generator.generateTree",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "File Tree Generator",
      "properties": {
        "filetreeGenerator.ignoredPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional patterns to ignore when generating the file tree. Default patterns (.git, node_modules, .DS_Store) will always be included."
        },
        "filetreeGenerator.maxDepth": {
          "type": "number",
          "default": 10,
          "description": "Maximum depth to traverse when generating the file tree."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^14.x.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "eslint": "^8.x.x",
    "typescript": "^4.x.x"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/YourUsername/filetree-generator/issues"
  },
  "homepage": "https://github.com/YourUsername/filetree-generator#readme"
}
